# BookifyMe Environment Configuration
# Copy this file to .env and add your actual values

# Google Books API Configuration
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Optional: Analytics Configuration  
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Optional: Custom Configuration
APP_NAME=BookifyMe
APP_VERSION=1.0.0
DEFAULT_MAX_RESULTS=12
RECOMMENDATION_UPDATE_FREQUENCY=5

# Development Settings
DEV_PORT=8000
ENABLE_DEBUG=true

# Deployment Settings (for future use)
DEPLOYMENT_URL=https://your-bookifyme-site.netlify.app
ENVIRONMENT=production